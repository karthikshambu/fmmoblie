<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    
    <!-- Green -->   
	<style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarGreen</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="MyActionBarGreen" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/theme_green</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyleGreen</item>
        <item name="android:subtitleTextStyle">@style/ActionBar.SubTitleTextStyleGreen</item>
        <item name="android:textFilterEnabled">true</item>
        <!--  <item name="android:backgroundSplit">#40bff5</item>-->
    </style>
    <style name="ActionBar.TitleTextStyleGreen" parent="@android:style/TextAppearance">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="ActionBar.SubTitleTextStyleGreen" parent="@android:style/TextAppearance">
	    <item name="android:textColor">@color/light_white</item>
	</style>
	
    
    <style name="ContactListView">
        <item name="android:verticalScrollbarPosition">right</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>
    
    <style name="quickContactBadgeStyle">
        <item name="android:background">@drawable/quickcontact_badge_small</item>
    </style>
    
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
  		<item name="android:windowNoTitle">true</item>
  	</style>
    
    <style name="searchTextHiglight">
        <item name="android:textColor">@color/holo_blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AlertDialogTheme" parent="android:Theme.Dialog">
	   <item name="android:textSize">15sp</item>
	</style>
    
    

</resources>
